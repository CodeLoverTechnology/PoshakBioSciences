
@{
    ViewBag.Title = "LoginAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="login">
    <div class="row">
        <div class="offset-3 col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div class="login">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="row p-5 bg-secondary">
                                       
                                    <div class="center-block">
                                        <img class="profile-img img-fluid img-thumbnail" src="~/Images/log3.png" /><br />
                                        @*<h4>Poshak BioScience Login Panel</h4>*@
                                    </div>
                                     <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-user"></i>
                                                </span>
                                                <input class="form-control" placeholder="Username" id="loginname" name="loginname" type="text" autofocus required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-lock"></i>
                                                </span>
                                                <input class="form-control" placeholder="Password" id="password" name="password" type="password" value="" required>
                                            </div>
                                        </div>
                                        <div class="panel-footer ">
                                            <label class="control-label">Forgot Your Password? <a href="#">Click Here</a></label>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Sign in">
                                        </div>
                                        @if (ViewBag.LoginStatus != null)
                                        {
                                            <div class="panel-footer ">
                                                <label class="control-label">@ViewBag.LoginStatus</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
