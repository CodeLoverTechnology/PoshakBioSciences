@{
    ViewBag.Title = "Contact";
}

<div class="container">
    <div class="row">
        <h1 style="background-color: coral; color: green;" class="p-5  w-100">CONTACT US
            <small class="float-right">
                <i class="fa fa-facebook" aria-hidden="true" style="margin-top: 10px; margin-left: 185px; font-size: 1.3em; color: white;"></i>
                <i class="fa fa-linkedin" aria-hidden="true" style="margin-top: 10px; margin-left: 15px; font-size: 1.3em; color: white;"></i>
                <i class="fa fa-twitter" aria-hidden="true" style="margin-top: 10px; margin-left: 15px; font-size: 1.3em; color: white;"></i>
                <i class="fa fa-instagram" aria-hidden="true" style="margin-top: 10px; margin-left: 15px; font-size: 1.3em; color: white;"></i>
           </small>
        </h1>
        </div>
        <div class="row">
             <div class="col-6 img-thumbnail">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d952.1568791964914!2d78.568505!3d17.333512!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x18def2ede1be7350!2sJama%20Masjid%20Mohiuddin!5e0!3m2!1sen!2sus!4v1581153941102!5m2!1sen!2sus" width="500" height="550" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            </div>
            <div class="col-6">
                <div class="container-fluid  bg-info p-5 ">
                    <strong class="text-white h3">Contact us get in touch with us by filling form below</strong>
                    <br><br>
                    <center>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="YOUR NAME" id="txtname" name="txtname">
                            </div>

                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="YOUR EMAIL" id="txtemail" name="txtemail">
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="YOUR Phone No" id="txtmobile" name="txtmobile">
                            </div>

                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="SUBJECT" id="txtSubject" name="txtSubject">
                            </div>

                            <div class="form-group">
                                <textarea class="form-control" id="txtmessage" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="MESSAGE" name="txtmessage"></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary" id="send">Send Message</button>
                        }
                    </center>
                </div>
            </div>
        </div><br><hr>
    </div>
<script type="text/javascript">
    var Result = '@ViewBag.Status';
    if (Result != '')
    {
        alert(Result);
    }
</script>
