@model IEnumerable<PoshakBioSciences.DbModel.M_ProductMaster>
<div class="row bg-dark text-white p-3 text-center rounded">
    <h2 class="text-center p-3">PRODUCTS LIST</h2>
    <hr style="height:2px;" />
    <div class="container-fluid">
        <div class="row">
            @{
                int i = 0;
                foreach (var item in Model)
                {
                    <div class="col-md-3 col-xl-3 col-lg-3 col-sm-12 col-xs-12 p-2">
                        @if (i == 0 || i == 3 || i == 6 || i == 9)
                        {
                            <div class="m-2 p-3 btn btn-outline-success shadow">
                                <h2 class="text-uppercase">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </h2>

                                <img src='@(Resources.PoshakBioSciencesWebResources.ShowImagesPath + item.ImgPath1)' alt='@(item.ProductName + item.ProductSubTitle)' title='@(item.ProductName + item.ProductSubTitle)' class="img-fluid img-thumbnail" style="max-height:150px;max-width:200px;" />
                                <small class="h5">@Html.DisplayFor(modelItem => item.ProductSubTitle)</small>
                                <hr />
                                <div class="text-center">
                                    @Html.ActionLink("Read More...", "Details", "ProductMaster", new { id = item.ProductId }, new { @class = "nav-link  h6 text-white btn btn-dark" })
                                </div>
                            </div>
                        }
                        else if (i == 1 || i == 4 || i == 7 || i == 10)
                        {
                            <div class="m-2 p-3 shadow btn btn-outline-primary">
                                <h2 class="text-uppercase">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </h2>

                                <img src='@(Resources.PoshakBioSciencesWebResources.ShowImagesPath + item.ImgPath1)' alt='@(item.ProductName + item.ProductSubTitle)' title='@(item.ProductName + item.ProductSubTitle)' class="img-fluid img-thumbnail"  style="max-height:150px;max-width:200px;" />
                                <small class="h5">@Html.DisplayFor(modelItem => item.ProductSubTitle)</small>
                                <hr />
                                <div class="text-center">
                                    @Html.ActionLink("Read More...", "Details", "ProductMaster", new { id = item.ProductId }, new { @class = "nav-link  h6 text-white btn btn-dark" })
                                </div>
                            </div>
                        }
                        else if (i == 2 || i == 5 || i == 8 || i == 11)
                        {
                            <div class="m-2  p-3 shadow  btn btn-outline-danger">
                                <h2 class="text-uppercase">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </h2>

                                <img src='@(Resources.PoshakBioSciencesWebResources.ShowImagesPath + item.ImgPath1)' alt='@(item.ProductName + item.ProductSubTitle)' title='@(item.ProductName + item.ProductSubTitle)' class="img-fluid img-thumbnail" style="max-height:150px;max-width:200px;" />
                                <small class="h5">@Html.DisplayFor(modelItem => item.ProductSubTitle)</small>
                                <hr />
                                <div class="text-center">
                                    @Html.ActionLink("Read More...", "Details", "ProductMaster", new { id = item.ProductId }, new { @class = "nav-link  h6 text-white btn btn-dark" })
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="m-2  p-3 shadow  btn btn-outline-info">
                                <h2 class="text-uppercase">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </h2>
                                <img src='@(Resources.PoshakBioSciencesWebResources.ShowImagesPath + item.ImgPath1)' alt='@(item.ProductName + item.ProductSubTitle)' title='@(item.ProductName + item.ProductSubTitle)' class="img-fluid img-thumbnail" style="max-height:150px;max-width:200px;" />
                                <small class="h5">@Html.DisplayFor(modelItem => item.ProductSubTitle)</small>
                                <hr />
                                <div class="text-center">
                                    @Html.ActionLink("Read More...", "Details", "ProductMaster", new { id = item.ProductId }, new { @class = "nav-link  h6 text-white btn btn-dark" })
                                </div>
                            </div>

                        }
                    </div>
                    i++;
                }
            }
        </div>
    </div>
</div>